# /etc/haproxy/haproxy.cfg

frontend www-https
    bind *:443 ssl crt /etc/ssl/certs/holberton.pem
    mode http
    default_backend www-backend

backend www-backend
    mode http
    balance roundrobin
    server web-01 10.0.0.1:80 check
    server web-02 10.0.0.2:80 check
    http-request set-header X-Client-IP %[src]
    http-request set-header X-Forwarded-Proto https
    http-request set-header Host www.holbertonschool.com
    http-response set-header Server HAProxy

# /etc/ssl/certs/holberton.pem should contain the certificate generated by certbot
