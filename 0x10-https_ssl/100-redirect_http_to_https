# /etc/haproxy/haproxy.cfg

frontend www-http
    bind *:80
    mode http
    redirect scheme https code 301 if !{ ssl_fc }
    default_backend www-backend

frontend www-https
    bind *:443 ssl crt /etc/ssl/certs/holberton.pem
    mode http
    default_backend www-backend

backend www-backend
    mode http
    balance roundrobin
    server web-01 10.0.0.1:80 check
    server web-02 10.0.0.2:80 check

# /etc/ssl/certs/holberton.pem should contain the certificate generated by certbot
